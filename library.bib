journal = {Interface Focus},
month = jun,
number = {3},
pages = {20130076},
pmid = {24904739},
title = {{It is not the parts, but how they interact that determines the behaviour of circadian rhythms across scales and organisms.}},
url = {http://rsfs.royalsocietypublishing.org/content/4/3/20130076.short http://www.ncbi.nlm.nih.gov/pubmed/24904739},
volume = {4},
